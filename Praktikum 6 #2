#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double a, b, c, s, luas;
    cout << "Masukkan panjang sisi a: ";
    cin >> a;
    cout << "Masukkan panjang sisi b: ";
    cin >> b;
    cout << "Masukkan panjang sisi c: ";
    cin >> c;

    s = (a + b + c) / 2;
    luas = sqrt(s * (s - a) * (s - b) * (s - c));
    cout << "Luas segitiga adalah: " << luas << endl;

    return 0;
}
